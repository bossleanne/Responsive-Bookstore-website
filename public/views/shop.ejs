			<!--preference -->
			<form action="/search" method="get">
				<div class="left-side">
					<h3 class="shopf-sear-headits-sear-head">
						Title</h3>
					<ul>
						<input type="text" class="form-control" name="Title" required>

					</ul>
				</div>

				<div class="left-side">
					<h3 class="shopf-sear-headits-sear-head">
						Author</h3>
					<ul>
						<input type="text" class="form-control" name="Author" placeholder="" required>
					</ul>
				</div>
				<!-- // preference -->

				<div class="left-side">
					<h3 class="shopf-sear-headits-sear-head"> Select Language </h3>
					<select name="Language" class="form-control">
						<option value="">Language</option>

						<% languages.forEach(function(language) { %>
						<option value="<%= language.language %>"><%= language.language %></option><br>
						<% }); %>
					</select>
				</div>

				<!-- searching -->
				<div class="search-hotel">
					<h3 class="shopf-sear-headits-sear-head">
						<!-- <span>author</span> in focus</h3> -->

						<!-- <input type="search" placeholder="search here" name="search" required=""> -->
						<input class="testing" type="submit" name="search" value="Search">
			</form>
		</div>
	</div>

	<!-- product right -->
	<div class="wrapper">
		<div class="left-ads-display col-md-9">
			<% if (books.length > 0) { %>
			<% books.forEach((book) => { %>
			<div class="col-lg-3 product-men">
				<div class="product-chr-info chr">
					<div class="caption">
						<a href="/shop.html/<%= book.ISBN13%>">
							<img src="images/lib8.jpg" alt="">
							<h4><%= book.title %></h4>
							<p><%= book.author %></p>
							<p><%= book.language %></p>
							<!-- <p>rating: <%= book.rating %></p> -->
							<p>
								<% if(book.rating ===5){ %>
								<span class="fa fa-star yellow-star" aria-hidden="true"></span>
								<span class="fa fa-star yellow-star" aria-hidden="true"></span>
								<span class="fa fa-star yellow-star" aria-hidden="true"></span>
								<span class="fa fa-star yellow-star" aria-hidden="true"></span>
								<span class="fa fa-star yellow-star" aria-hidden="true"></span>
								<% } %>
								<% if(book.rating ===4){ %>
								<span class="fa fa-star yellow-star" aria-hidden="true"></span>
								<span class="fa fa-star yellow-star" aria-hidden="true"></span>
								<span class="fa fa-star yellow-star" aria-hidden="true"></span>
								<span class="fa fa-star yellow-star" aria-hidden="true"></span>
								<span class="fa fa-star gray-star" aria-hidden="true"></span>
								<% } %>
								<% if(book.rating ===3){ %>
								<span class="fa fa-star yellow-star" aria-hidden="true"></span>
								<span class="fa fa-star yellow-star" aria-hidden="true"></span>
								<span class="fa fa-star yellow-star" aria-hidden="true"></span>
								<span class="fa fa-star gray-star" aria-hidden="true"></span>
								<span class="fa fa-star gray-star" aria-hidden="true"></span>
								<% } %>
								<% if(book.rating ===2){ %>
								<span class="fa fa-star yellow-star" aria-hidden="true"></span>
								<span class="fa fa-star yellow-star" aria-hidden="true"></span>
								<span class="fa fa-star gray-star" aria-hidden="true"></span>
								<span class="fa fa-star gray-star" aria-hidden="true"></span>
								<span class="fa fa-star gray-star" aria-hidden="true"></span>
								<% } %>
								<% if(book.rating ===1){ %>
								<span class="fa fa-star yellow-star" aria-hidden="true"></span>
								<span class="fa fa-star gray-star" aria-hidden="true"></span>
								<span class="fa fa-star gray-star" aria-hidden="true"></span>
								<span class="fa fa-star gray-star" aria-hidden="true"></span>
								<span class="fa fa-star gray-star" aria-hidden="true"></span>
								<% } %>
							</p>
						</a>
					</div>
				</div>
			</div>
			<% }) %>
			<% } %>
		</div>
	</div>

</div>
</div>
